<section style="padding: 60px 20px">
  <h1
    style="
      font-family: 'Playfair Display', serif;
      font-size: 36px;
      color: var(--text-accent);
      text-align: center;
      margin-bottom: 40px;
    "
  >
    <%= tag %>
  </h1>

  <% if (!posts || posts.length === 0) { %>
  <div
    style="text-align: center; color: var(--text-secondary); padding: 40px 0"
  >
    <p>No stories found for this category yet.</p>
  </div>
  <% } else { %>
  <section class="posts">
    <% posts.forEach(p => { %>
    <article class="post-card">
      <% if (p.coverImage) { %>
      <img src="<%= p.coverImage %>" alt="<%= p.title %>" class="cover" />
      <% } else { %>
      <div
        class="cover"
        style="
          background: linear-gradient(
            135deg,
            rgba(212, 175, 55, 0.06) 0%,
            rgba(212, 175, 55, 0.02) 100%
          );
          display: flex;
          align-items: center;
          justify-content: center;
          color: var(--text-secondary);
        "
      >
        Story Cover
      </div>
      <% } %>
      <span class="type"><%= tag.toUpperCase() %></span>
      <h3><%= p.title %></h3>
      <p class="meta">
        By <%= p.author?.name || p.author?.email %> â€” <%= p.publishedAt ? new
        Date(p.publishedAt).toLocaleDateString() : 'Unreleased' %>
      </p>
      <p class="excerpt"><%= p.excerpt || p.content.substring(0, 120) %>...</p>
      <a href="/post/<%= p.slug %>">Open Story</a>
    </article>
    <% }) %>
  </section>
  <% } %>
</section>
